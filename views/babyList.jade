								span.icon-bar
						div#sideNavbar.collapse.navbar-collapse
							div#accordion.panel-group
								div.panel.panel-default
									div.panel-heading
										h4.panel-title
											a(data-toggle="collapse", data-parent="#accordion" href="#collapseOne")
												span.glyphicon.glyphicon-baby-formula
												| Quản Lý Học Sinh
												span.caret
									div#collapseOne.panel-collapse.collapse.in
										ul.list-group
											li
												a.navlink.active(href="/babyList") Danh Sách Học Sinh
												a.navlink(href="#") Điểm Danh
												a.navlink(href="/baby") Tạo Mới Học Sinh
												
								div.panel.panel-default
									div.panel-heading
										h4.panel-title
											a(data-toggle="collapse", data-parent="#accordion" href="#collapseFour")
												span.glyphicon.glyphicon-baby-formula
												| Quản Lý Thu Chi
												span.caret
									div#collapseFour.panel-collapse.collapse
										ul.list-group
											li
												a.navlink(href="#") Quản Lý Thu
												a.navlink(href="#") Quản Lý Chi												
								div.panel.panel-default
									div.panel-heading
										h4.panel-title
											a(data-toggle="collapse", data-parent="#accordion" href="#collapseTwo")
												span.glyphicon.glyphicon-education
												| Quản Lý Nhân Viên
												span.caret
									div#collapseTwo.panel-collapse.collapse
										ul.list-group
											li
												a.navlink(href="/teacherList") Danh sách Nhân Viên
												a.navlink(href="#") Chấm Công
												a.navlink(href="/teacher") Tạo Mới Nhân Viên
								div.panel.panel-default
									div.panel-heading
										h4.panel-title
											a(data-toggle="collapse", data-parent="#accordion" href="#collapseThree")
												span.glyphicon.glyphicon-user
												| Quản Lý Tài khoản
												span.caret
									div#collapseThree.panel-collapse.collapse
										ul.list-group
											li
												a.navlink(href="/teacherList") Danh Sách Người Dùng
												a.navlink(href="/teacher") Tạo Mới Người Dùng
								div.panel.panel-default
									div.panel-heading
										h4.panel-title
											a(data-toggle="collapse", data-parent="#accordion" href="#collapseFive")
												span.glyphicon.glyphicon-user
												| Quản Lý Chỉ Mục
												span.caret
									div#collapseFive.panel-collapse.collapse
										ul.list-group
											li
												a.navlink(href="/teacherList") Danh sách Chỉ Mục
												a.navlink(href="/teacher") Tạo Mới Chỉ Mục
				div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
					if(babies == null || babies.length == 0)
						p
							| Chưa có dữ liệu. Tạo thông tin về 
							a(href="/baby") Bé
							|.
					else
						table#baby-grid.table.table-hover.table-striped
							thead
								tr
									th Họ Tên
									th Tên Thân Mật
									th Số Điện Thoại Bố	
									th Số Điện Thoại Mẹ
									th Email						
									th Chi Nhánh
									th Lớp
									th Ghi chú
									th Actions	
									th 
							tbody
								each baby, index in babies
									tr(data-id="#{baby._id}")
										td= baby.name
										td= baby.fname
										td= baby.phone
										td= baby.mphone
										td= baby.email
										td= baby.class
										td= baby.branch
										td= baby.note_1
										td.action
											button.btn.btn-default(id="edit_#{baby._id}", type="button")
												span.glyphicon.glyphicon-pencil Sửa
										td.action
											button.btn.btn-danger(id="edit_#{baby._id}", type="button")
												span.glyphicon.glyphicon-remove Xóa
										

